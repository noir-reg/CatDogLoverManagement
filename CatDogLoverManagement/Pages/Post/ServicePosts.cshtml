@page
@model CatDogLoverManagement.Pages.Post.ServicePostModel
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div>
        <h1>Service Blog Posts</h1>
    </div>
</div>
@{
    var id = HttpContext.Session.GetString("userId");
}
<partial name="_Notification">

    @if (Model.BlogPosts != null && Model.BlogPosts.Any())
    {
        @foreach (var blog in Model.BlogPosts)
        {
            <div>
                <div class="container">
                    <div>
                        @if (!string.IsNullOrEmpty(id))
                        {
                            if (id.Equals(blog.UserId.ToString()))
                            {
                                <h5>Your Post</h5>
                            }
                        }
                    </div>
                    <form method="post">
                        <div class="mb-3" style="display:none">
                            <label for="id" class="form-label">Post Id</label>
                            <input type="hidden" class="form-control" id="postId" asp-for="@blog.PostId" />
                        </div>
                        <div class="mb-3">
                            <label for="title" class="form-label">Title:</label>
                            @blog.Title
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description:</label>
                            @blog.Description
                        </div>

                        <div class="mb-3">
                            <label for="createdDate" class="form-label">Created Date:</label>
                            @blog.CreatedDate
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Image</label>
                            <img src="@blog.Image" style="width:300px;" />
                        </div>
                        <div class="mb-3" style="display:none">
                            <label for="userId" class="form-label">UserID</label>
                            <input type="text" class="form-control" id="userId" asp-for="@blog.UserId" />
                        </div>
                        <div class="mb-3" style="display:none">
                            <label for="animalId" class="form-label">ServiceID</label>
                            <input type="text" class="form-control" id="serviceId" asp-for="@blog.ServiceId" />
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Name:</label>
                            @blog.ServiceName
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Note:</label>
                            @blog.ServiceNote
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Address:</label>
                            @blog.Address
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Open Date:</label>
                            @blog.OpenDate
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">From:</label>
                            @blog.From
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">To:</label>
                            @blog.To
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            @blog.Price
                        </div>
                        @if (!string.IsNullOrEmpty(id))
                        {
                            if (!id.Equals(blog.UserId.ToString()))
                            {
                                <div class="mb-3 d-flex justify-content-between">
                                    <button class="btn btn-danger" type="submit" asp-page-handler="">Pick Time</button> <!--Chua lam phan chon thoi gian de order service anh em nghien cuu-->
                                </div>
                            }
                        }
             

                    </form>
                    <div id="comment">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Comment</label>
                                <input type="text" class="form-control" asp-for="Message" />
                                <input type="hidden" value="@blog.PostId" class="form-control" asp-for="PostId" />
                                <input type="hidden" value="@id" class="form-control" asp-for="VolunteerId" />
                                <button class="btn btn-danger" type="submit" asp-page-handler="AddComment">Ok</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div>
            <p>No Blog Posts Were Found!.</p>
        </div>
    }
