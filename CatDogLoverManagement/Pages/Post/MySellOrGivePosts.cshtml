@page
@model CatDogLoverManagement.Pages.Post.MySellList
@{
}


 @{
    String jsonString = HttpContext.Session.GetString("userId");
    if (!string.IsNullOrEmpty(jsonString))
    {
        if (!jsonString.Equals("4984f0a0-fb04-4759-baad-0682b4f8657f"))
        {
    @if (Model.BlogPosts != null && Model.BlogPosts.Any())
    {
        @foreach (var blog in Model.BlogPosts)
        {
            <div onclick="toggleContent('@blog.PostId')">
                <div class="container" id="body">
                    <form method="post">
                        <div class="mb-3" style="display:none">
                            <label for="id" class="form-label">Post Id</label>
                            @blog.PostId"/>
                        </div>
                        <div class="mb-3" >
                            <label for="title" class="form-label">Title:</label>
                            @blog.Title
                        </div>
                        <div class="mb-3">
                            <label for="title" class="form-label">Status:</label>
                            @blog.Status
                        </div>
                        <div class="mb-3">
                            <label for="createdDate" class="form-label">Created Date:</label>
                            @blog.CreatedDate
                        </div>
                        <div class="content" id=@blog.PostId>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description:</label>
                                @blog.Description
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label"></label>
                                <img src="@blog.Image" style="width:300px;height:300px" />
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Type:</label>
                                @blog.AnimalType
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Name:</label>
                                @blog.AnimalName
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Gender:</label>
                                @blog.Gender
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Age (month):</label>
                                @blog.Age
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Animal Description:</label>
                                @blog.AnimalDescription
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Price:</label>
                                @blog.Price
                            </div>
                        </div>
                        <div class="mb-3" style="display:none">
                            <label for="userId" class="form-label">UserID</label>
                            <input type="hidden" class="form-control" id="userId" asp-for="@blog.UserId" />
                        </div>
                        <div class="mb-3" style="display:none">
                            <label for="animalId" class="form-label">AnimalID</label>
                            <input type="hidden" class="form-control" id="animalId" asp-for="@blog.AnimalId" />
                        </div>
                        <div class="mb-3 d-flex justify-content-between">
                            <a class="button" style="text-decoration:none" href="EditSellOrGivePost/@blog.PostId">Modify</a>
                        </div>
                    </form>
                    <hr style ="height: 2px; margin: 10px 0; background-color: black;" />
                </div>

            </div>

        }
    }
    else
    {
        <div>
            <p>No Blog Posts Were Found!.</p>
        </div>
    }
    <style>
        .button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 20px;
            text-align: center;
            text-decoration: none;
            color: #fff;
            background-color:white;
            border-radius: 5px;
            border: none;
            transition: all 0.5s;
        }

            .button:hover {
                background-color: silver;
            }

       
        .content {
            display: none;
        }

        #body {
            width: 80%;
            margin: auto;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
        }

            #body .form-label {
                font-weight: bold;
                color: #343a40;
            }

            #body .mb-3 {
                margin-bottom: 1rem !important;
            }

            #body a {
                color: #007bff;
                text-decoration: none;
            }

                #body a:hover {
                    color: #0056b3;
                    text-decoration: underline;
                }

            #body img {
                max-width: 100%;
                height: auto;
            }

            #body hr {
                border: none;
                border-top: 2px solid #000;
                margin: 10px 0;
            }

    </style>


    <script>
        function toggleContent(id) {
            var content = document.getElementById(id);
            
            if (content.style.display == "none") {
                content.style.display = "block";
                
            } else {
                content.style.display = "none";
            }
        }
    </script>

        }
        else
        {
            <h1>Access Denied</h1>
        }
    }
    else
    {
        <h1>Access Denied</h1>
    }
}



