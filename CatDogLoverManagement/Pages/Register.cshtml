@page
@model CatDogLoverManagement.Pages.RegisterModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <partial name ="_Notification">
            <h1 class="mb-3 h3">Register</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" asp-for="RegisterViewModel.Username" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="RegisterViewModel.Email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="RegisterViewModel.Password" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Phonenumber</label>
                    <input type="number" class="form-control" asp-for="RegisterViewModel.Phonenumber" />
                </div>

                <div class="mb-3">
                    <input type="action" class="form-control" value="true" asp-for="RegisterViewModel.Action" hidden />
                </div>

                <div class="mb-3">
                    <label class="form-label">RoleID</label>
                    <input type="text" class="form-control" asp-for="RegisterViewModel.RoleId" />
                </div>

                <div class="mb-3">
                        <button type="submit" class="btn bg-dark text-light"> Register</button>
                </div>

            </form>
        </div>
    </div>
</div>